{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "lib": [
      "dom",
      "es6",
      "esnext",
      "es2017",
      "esnext.asynciterable"
    ],
    "outDir": "./dist",
    "moduleResolution": "NodeNext",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "baseUrl": "src/",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "inlineSourceMap": true,
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "./src/**/*.cjs"
  ],
  "exclude": [
    "node_modules",
    "test/**/*.ts"
  ],
  "compileOnSave": true,
  "ts-node": {
    "esm": true,
    "swc": true,
    "transpileOnly": true,
  }
}