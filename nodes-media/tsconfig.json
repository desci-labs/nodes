{
  /** https://www.typescriptlang.org/docs/handbook/modules/guides/choosing-compiler-options.html#im-compiling-and-running-the-outputs-in-nodejs */
  "compilerOptions": {
    "module": "nodenext",
    "verbatimModuleSyntax": true,
    "sourceMap": true,
    "outDir": "./dist",
    "noImplicitReturns": true,
    // Wall of shame: ipfs-unixfs, kubo-rpc-client, ipfs-utils
    "skipLibCheck": true
  },
  "include": ["**/*.ts"]
}
