{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",
    "verbatimModuleSyntax": true,
    "outDir": "./dist",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "strictNullChecks": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["./src/**/*.ts", "*.ts", "./drizzle/*schema.ts"]
}
