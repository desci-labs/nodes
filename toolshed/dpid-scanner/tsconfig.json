{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",
    "verbatimModuleSyntax": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "noEmit": true,
    "strictNullChecks": true,
    "exactOptionalPropertyTypes": true
  }
}
